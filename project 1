def filter_by_island(csv_file, island_name):
    data= []
    with open(csv_file, newline='') as file:
        reader= csv.DictReader(file)
        for row in reader:
            if row ["island"] == island_name:
                data.append(row)
    
        return data
    
def filter_by_species(csv_file, species_name):
    data= []
    with open(csv_file, newline='') as file:
        reader= csv.DictReader(file)
        for row in reader:
            if row ["species"] == species_name:
                data.append(row)
    return data
    
def calculate_flipper_percentage(csv_file, island_name, threshold=190):
    total= 0
    above_threshold= 0 
    with open(csv_file, newline='') as file:
        reader= csv.DictReader(file)
        for row in reader: 
            if row ["island"]== island_name:
                flipper_length_mm = row["flipper length (mm)"]
                if flipper_length_mm:
                    total += 1
                    if float(flipper_length_mm) > threshold:
                        above_threshold += 1
                    total += 1

    percentage = 0
    if total > 0:
        percentage = round((above_threshold / total) * 100, 2)
        return percentage


